(: filter (-> (-> Expression boolean) Expression Expression))
(= (filter $pred $list)
  (if (== $list ()) 
      ()
      (let* (
        (($head $tail) (decons-atom $list))
        ($restFiltered (filter $pred $tail))
      )
        (if ($pred $head)
          (cons-atom $head $restFiltered)
          $restFiltered
        )
      )
  )
)
(: isEven? (-> Number boolean))
(= (isEven? $x)
  (== (* (/ $x 2) 2) $x)
)
!(filter isEven? (1 2 3 4 5 6))
